backgroundColor = #ffe2ee
mainColor = #ff0040
postWidth = 500px

body
  background: backgroundColor

header

  & h1
    font-family: 'Great Vibes', cursive
    font-weight: normal
    font-size: 5em
    text-align: center
    color: mainColor  

main
  display: grid
  grid-template-columns: 1fr 3fr 3fr 1fr
  grid-template-areas: "left panel content right"
  // justify-items: center

.panel
  grid-area: panel

.post
  grid-area: content 
  font-family: 'Merienda'

article
  // grid-area: content
  position: relative
  // left: 40%
  // height: 'calc((%s * %s) + 200px)' % (postWidth postAspectRatio)
  width: postWidth
  box-shadow: 0px 0px 10px 0px #888
  background-image: repeating-linear-gradient(white 0px, white 19px, steelblue 20px)
  padding-bottom: 1em
  & h1
    font-family: 'Merienda', cursive
    text-align: right
    margin: 0.9em 1em 0 0
    font-size: 2.3em

  & p
    margin: 2em 0.3em 0 3.3em
    line-height: 20px
    overflow: hidden
    outline: none

  & .publication
    display: inline
    margin-left: 3.3em
    & .author
      display: inline-block

    & .date
      float: right
 
article::before 
  content: ''
  position: absolute
  left: 45px
  height: 100%
  width: 2px
  background: rgba(255,0,0,0.4)


