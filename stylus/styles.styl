body
  background: black

main
  display: grid
  grid-template: 12em 1fr 1fr / 1fr 3fr 1fr
  grid-gap: 5px
  grid-template-areas: "header header header" "left content right" "footer footer footer"
  
  // align-items: center

header
  grid-area: header
  justify-items: center
  align-items: center

  & h1
    font-family: 'Great Vibes', cursive
    font-weight: normal
    font-size: 5em
    text-align: center
    color: #ff0040

section
  grid-area: content
  font-family: 'Merienda'

  & h1
    font-family: 'Merienda', cursive
    color: white
    text-align: right
    margin: 2em
  & p
    color: white
    text-align: justify
    margin: 0.7em
