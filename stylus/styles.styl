backgroundColor = #ffe2ee
headerFontColor = #ff0040
postAspectRatio = 1.6471
postWidth = 500px

body
  background: backgroundColor

header

  & h1
    font-family: 'Great Vibes', cursive
    font-weight: normal
    font-size: 5em
    text-align: center
    color: headerFontColor

main
  display: grid
  grid-template-columns: 1fr 3fr 1fr
  grid-template-areas: "left content right"
  // justify-items: center 

article
  grid-area: content
  font-family: 'Merienda'
  position: relative
  left: 40%
  // height: 'calc((%s * %s) + 200px)' % (postWidth postAspectRatio)
  width: postWidth
  box-shadow: 0px 0px 10px 0px #888
  background-image: repeating-linear-gradient(white 0px, white 19px, steelblue 20px)

  & h1
    font-family: 'Merienda', cursive
    text-align: right
    margin: 0.5em 1em 0 0
  & p
    margin-left: 3.3em 
    margin-right: 0.3em 
    line-height: 20px
    overflow: hidden
    outline: none
 
article::before 
  content: ''
  position: absolute
  left: 45px
  height: 100%
  width: 2px
  background: rgba(255,0,0,0.4)


